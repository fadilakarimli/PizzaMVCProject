@model PizzaProject.ViewModels.UI.Login.LoginVM

<form asp-action="Login" asp-controller="Login" method="post">
    <div class="form-group">
        <label>Username or Email</label>
        <input asp-for="UsernameOrEmail" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>

    <div class="form-group">
        <input asp-for="RememberMe" type="checkbox" />
        <label asp-for="RememberMe">Remember Me</label>
    </div>

    <button type="submit" class="sign-in-btn">Login</button>
</form>
