@model IEnumerable<PizzaProject.ViewModels.Admin.HomeInfo.HomeInfoVM>

@foreach (var info in Model)
{
    <section class="ftco-about d-md-flex">
        <div class="one-half img" style="background-image: url('@Url.Content("~/images/" + info.Image)');"></div>
        <div class="one-half ftco-animate">
            <div class="heading-section ftco-animate">
                <h2 class="mb-4">@Html.Raw(info.Title)</h2>
            </div>
            <div>
                <p>@info.Description</p>
            </div>
        </div>
    </section>
}
