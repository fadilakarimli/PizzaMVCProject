@model IEnumerable<PizzaProject.ViewModels.Admin.Chef.ChefVM>


<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">Our Chef</h2>
                <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
                <p class="mt-5">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var chef in Model)
            {
                <div class="col-lg-3 d-flex mb-sm-4 ftco-animate">
                    <div class="staff">
                        <div class="img mb-4" style="background-image: url('@chef.ImageUrl');"></div>
                        <div class="info text-center">
                            <h3><a href="#">@chef.FullName</a></h3>
                            <span class="position">@chef.Position</span>
                            <div class="text">
                                <p>@chef.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
