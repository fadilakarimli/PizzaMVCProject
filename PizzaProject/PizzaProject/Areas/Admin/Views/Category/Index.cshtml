@model IEnumerable<PizzaProject.ViewModels.Admin.Category.CategoryVM>

@{
    ViewData["Title"] = "Categories";
}

<div class="container" style="margin-left:300px; margin-top:50px;">

<div class="container mt-4">
    <h2>Categories</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Create New Category</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th style="width:200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure to delete this category?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>