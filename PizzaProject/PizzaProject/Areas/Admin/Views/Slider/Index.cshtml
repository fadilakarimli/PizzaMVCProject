@model List<SliderVM>

@{
    ViewData["Title"] = "Sliders";
}


<div class="container" style="margin-left:300px; margin-top:50px;">

<h2>Sliders</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Subheading</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Subheading</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <img src="~/images/@item.Image" width="120" />
                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure to delete this slider?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>