@model SliderEditVM

@{
    ViewData["Title"] = "Edit Slider";
}
<div class="container" style="margin-left:300px; margin-top:50px;">

<h2>Edit Slider</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Subheading" class="form-label"></label>
        <input asp-for="Subheading" class="form-control" />
        <span asp-validation-for="Subheading" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Current Image</label><br />
        <img src="~/images/@Model.ImagePath" width="200" class="mb-2" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Image" class="form-label">Upload New Image (optional)</label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
</div>