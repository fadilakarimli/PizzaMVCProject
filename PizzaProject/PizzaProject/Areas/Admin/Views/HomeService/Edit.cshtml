@model PizzaProject.ViewModels.Admin.HomeService.ServiceEditVM

@{
    ViewData["Title"] = "Edit Service";
}

<div class="container" style="margin-left:300px; margin-top:50px;">


<h2>Edit Service</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Icon">Icon</label>
        <select asp-for="Icon" class="form-control" asp-items="@(new SelectList(ViewBag.Icons, Model.Icon))" id="iconDropdown">
            <option value="">--Select Icon--</option>
        </select>
        <div class="mt-2">
            Preview: <span id="iconPreview" class="@Model.Icon"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

</div>