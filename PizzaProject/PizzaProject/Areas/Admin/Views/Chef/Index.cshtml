    @model IEnumerable<PizzaProject.ViewModels.Admin.Chef.ChefVM>

    @{
        ViewData["Title"] = "Chefs";
    }

    <div class="container" style="margin-left:300px; margin-top:50px;">
        <h2>Chefs</h2>
        <a class="btn btn-success mb-3" asp-action="Create">Add New Chef</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Full Name</th>
                    <th>Position</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                             <img src="@item.ImageUrl" width="100" />
                        </td>
                        <td>@item.FullName</td>
                        <td>@item.Position</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
