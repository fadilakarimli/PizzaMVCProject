@model PizzaProject.ViewModels.Admin.Chef.ChefEditVM

<div class="container" style="margin-left:300px; margin-top:50px;">
    <h2>Edit Chef</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Position"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Image</label><br />
            <img src="@Model.CurrentImageUrl" width="120" />
        </div>

        <div class="form-group">
            <label asp-for="NewImage">Upload New Image</label>
            <input asp-for="NewImage" type="file" class="form-control" />
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
    </form>
</div>
