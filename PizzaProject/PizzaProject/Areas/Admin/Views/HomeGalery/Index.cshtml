@model IEnumerable<PizzaProject.ViewModels.Admin.HomeGalery.HomeGaleryVM>

@{
    ViewData["Title"] = "Home Gallery";
}

<div class="container" style="margin-left:250px; margin-top:40px;">
    <h2>Home Gallery</h2>
    <a class="btn btn-success mb-3" asp-action="Create">Add New Image</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th style="width:200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image" alt="Gallery Image" style="width:120px; height:80px; object-fit:cover;" />
                    </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
