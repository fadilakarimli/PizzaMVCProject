@model PizzaProject.ViewModels.Admin.HomeGalery.HomeGaleryEditVM

@{
    ViewData["Title"] = "Edit Gallery Image";
}

<div class="container" style="margin-left:250px; margin-top:40px;">
    <h2>Edit Image</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label>Current Image</label><br />
            <img src="@Model.Image" alt="Current Image" style="width:150px; height:100px; object-fit:cover;" />
        </div>

        <div class="form-group mb-3">
            <label>Upload New Image</label>
            <input asp-for="NewImage" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
